<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>GateSafe</display-name>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/META-INF/context.xml</param-value>
    </context-param>

    <welcome-file-list>
        <!--<welcome-file>index.html</welcome-file>-->
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>noCacheFilter</filter-name>
        <filter-class>com.gate.gatesafe.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>noCacheFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/webgate</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--    Contrainte de securite des ressources administrateur-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin resources</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/responsable-client/*</url-pattern>
            <url-pattern>/partner/*</url-pattern>
            <url-pattern>/redirect.jsp</url-pattern>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
<!--        <user-data-constraint>-->
<!--            <transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
<!--        </user-data-constraint>-->
    </security-constraint>

    <!--    Contrainte de securite des ressources responsable client-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Responsable client resources</web-resource-name>
            <url-pattern>/responsable-client/*</url-pattern>
            <url-pattern>/redirect.jsp</url-pattern>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>responsableClient</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
<!--        <user-data-constraint>-->
<!--            <transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
<!--        </user-data-constraint>-->
    </security-constraint>

    <!--    Contrainte de securite des ressources partner-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Partners resources</web-resource-name>
            <url-pattern>/partner/*</url-pattern>
            <url-pattern>/redirect.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>partners</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
<!--        <user-data-constraint>-->
<!--            <transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
<!--        </user-data-constraint>-->
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>authentification-file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <description>Administrateur</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>Responsable client</description>
        <role-name>responsableClient</role-name>
    </security-role>
    <security-role>
        <description>Partner</description>
        <role-name>partners</role-name>
    </security-role>
</web-app>
